<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Customer_Controller">
    <children>
        <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Adopt">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Button fx:id="btn_adopt" layoutX="320.0" layoutY="320.0" mnemonicParsing="false" onAction="#adoptButton" prefHeight="25.0" prefWidth="150.0" text="Adopt" />
                                <Button fx:id="goBack1" layoutX="120.0" layoutY="320.0" mnemonicParsing="false" onMouseClicked="#previous" prefHeight="26.0" prefWidth="150.0" text="Previous Page" />
                                <Label layoutX="52.0" layoutY="252.0" prefHeight="17.0" prefWidth="100.0" text="Search by Species" />
                                <Label layoutX="241.0" layoutY="252.0" text="Search by Breed" />
                        <ComboBox fx:id="speciesCombo" layoutX="20.0" layoutY="270.0" onAction="#breedChoice" prefWidth="150.0" />
                        <ComboBox fx:id="breedCombo" layoutX="220.0" layoutY="270.0" prefWidth="150.0" />
                        <Button fx:id="btn_search" layoutX="420.0" layoutY="270.0" mnemonicParsing="false" prefWidth="150.0" text="Search" />
                        <TableView fx:id="tv_animalAdopt" layoutX="20.0" layoutY="25.0" prefHeight="216.0" prefWidth="560.0">
                          <columns>
                            <TableColumn fx:id="tbc_species" prefWidth="140.0" text="Species" />
                            <TableColumn fx:id="tbc_breed" prefWidth="140.0" text="Breed" />
                              <TableColumn fx:id="tbv_petName" prefWidth="140.0" text="Pet Name" />
                              <TableColumn fx:id="tbc_animalID" minWidth="0.0" prefWidth="140.0" text="Pet ID" />
                          </columns>
                        </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Make an appointment">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="417.0" layoutY="14.0" prefHeight="26.0" prefWidth="43.0" text="Name:" />
                                <Label layoutX="417.0" layoutY="83.0" prefHeight="23.0" prefWidth="95.0" text="Phone Number:" />
                                <Label layoutX="420.0" layoutY="205.0" prefHeight="24.0" prefWidth="116.0" text="Select Date(Mon-Fri):" />
                                <TextField fx:id="numberField" layoutX="417.0" layoutY="113.0" prefHeight="25.0" prefWidth="143.0" />
                                <TextField fx:id="nameField" layoutX="417.0" layoutY="49.0" prefHeight="26.0" prefWidth="142.0" />
                                <Button fx:id="btn_Appointment" layoutX="366.0" layoutY="317.0" mnemonicParsing="false" onAction="#submitAppointment" prefHeight="25.0" prefWidth="188.0" text="Submit Appointment" />
                                <Button fx:id="goBack2" layoutX="48.0" layoutY="316.0" mnemonicParsing="false" onMouseClicked="#previous" prefHeight="26.0" prefWidth="110.0" text="Previous Page" />
                                <TextArea fx:id="selectedAnimal" layoutX="26.0" layoutY="26.0" prefHeight="222.0" prefWidth="324.0" />
                                <DatePicker fx:id="dateAndTime" layoutX="417.0" layoutY="236.0" />
                        <TextField fx:id="timeField" layoutX="418.0" layoutY="173.0" prefHeight="25.0" prefWidth="145.0" />
                        <Label layoutX="417.0" layoutY="148.0" text="Enter time(8am-5pm)" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Donate">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="amountField" layoutX="25.0" layoutY="161.0" />
                                <TextArea fx:id="donationTxtArea" layoutX="141.0" layoutY="220.0" prefHeight="137.0" prefWidth="299.0" />
                                <Label layoutX="56.0" layoutY="14.0" prefHeight="35.0" prefWidth="488.0" text="PLEASE DONATE TO SUPPORT OUR SHELTER" textFill="#000000c2">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Label layoutX="25.0" layoutY="135.0" text="Enter amount" />
                                <Button fx:id="donateButton" layoutX="408.0" layoutY="161.0" mnemonicParsing="false" onAction="#donateBtn" prefHeight="25.0" prefWidth="105.0" text="Donate" />
                            </children></AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
